var color = 'blue';
<% if !@success %>
	color = 'red';
<% end %>

Materialize.toast('<%= j @message %>', 4000, color);
<% if @success %>
	$('button[type=submit]').toggleClass('disabled');
	$('button[type=submit]').prop('disabled', true);
	$('.tooltipped').tooltip('remove');
	$('.tooltipped').tooltip({delay: 50});
<% end %>